{
	"compilerOptions": {
		"jsx": "react",
		"jsxFactory": "tsx",
		"lib": [
			"dom",
			"es5",
			"es2015.promise",
			"es2015.iterable",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		],
		"module": "umd",
		"moduleResolution": "node",
		"importHelpers": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"strict": true,
		"target": "es5"
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts",
		"./src/**/*.tsx",
		"./tests/**/*.tsx"
	]
}
